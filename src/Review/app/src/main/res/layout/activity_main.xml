<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adoniskrasniqi.review.MainActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAztech"
        android:clickable="true"
        android:clipChildren="false"
        android:elevation="1dp"
        android:foregroundGravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Faleminderit !"
            android:textColor="@android:color/white"
            android:textSize="36dp"
            android:visibility="visible" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:saveEnabled="true"
            android:focusable="true"
            android:background="@drawable/rpl"
            android:id="@+id/b1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/b2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/stars" />

        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:saveEnabled="true"
            android:focusable="true"
            android:background="@drawable/rpl"
            android:id="@+id/b2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b1"
            android:layout_toRightOf="@+id/b1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/stars" />

        <ImageButton
            android:id="@+id/b3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b2"
            android:layout_toRightOf="@+id/b2"
            android:background="@drawable/rpl"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:saveEnabled="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/stars" />

        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:saveEnabled="true"
            android:focusable="true"
            android:background="@drawable/rpl"
            android:id="@+id/b4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b3"
            android:layout_toRightOf="@+id/b3"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/stars" />

        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:saveEnabled="true"
            android:focusable="true"
            android:background="@drawable/rpl"
            android:id="@+id/b5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/b4"
            android:layout_toRightOf="@+id/b4"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/stars" />

        <EditText
            android:id="@+id/comment_box"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="749dp"
            android:layout_height="125dp"
            android:layout_alignLeft="@+id/b1"
            android:layout_alignStart="@+id/b1"
            android:layout_below="@+id/b1"
            android:ems="10"
            android:hint="Komenti juaj"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:visibility="gone" />

        <Button
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/comment_box"
            android:layout_alignRight="@+id/comment_box"
            android:layout_below="@+id/comment_box"
            android:text="Vleresoni perseri"
            android:visibility="gone" />

    </RelativeLayout>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="Dergo"
        android:textSize="16dp"
        android:visibility="gone" />

</RelativeLayout>