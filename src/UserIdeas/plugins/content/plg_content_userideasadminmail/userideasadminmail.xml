<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_USERIDEASADMINMAIL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2016 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>2.4</version>
    <creationDate>17 November, 2016</creationDate>
    <description><![CDATA[
    <p><a href='http://itprism.com/free-joomla-extensions/ecommerce-gamification/feedbacks-ideas-suggestions' target='_blank'>Content - UserIdeas Admin Mail</a> is a plugin that sends notification mails to administrator.</p>
    <p><a href='http://itprism.com/help/108-userfeedback-documentation-faq' target='_blank'>Read documentation</a> that will help you to setup the extensions.</p>
    <p><a href='http://itprism.com/' target='_blank'>Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href='http://extensions.joomla.org/extensions/extension/contacts-and-feedback/testimonials-a-suggestions/user-ideas' target='_blank'>vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>

    <help url="PLG_CONTENT_USERIDEASADMINMAIL_HELP_URL"/>

    <files>
        <filename plugin="userideasadminmail">userideasadminmail.php</filename>
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_emailtemplates/models/fields">
                <field name="send_when_post_email_id" type="emailtemplate" default="0" label="PLG_CONTENT_USERIDEASADMINMAIL_SEND_WHEN_POST_IDEA" description="PLG_CONTENT_USERIDEASADMINMAIL_SEND_WHEN_POST_IDEA_DESC" />
                <field name="post_comment_email_id" type="emailtemplate" default="0" label="PLG_CONTENT_USERIDEASADMINMAIL_SEND_WHEN_POST_COMMENT" description="PLG_CONTENT_USERIDEASADMINMAIL_SEND_WHEN_POST_COMMENT_DESC" />

                <field name="email_mode" type="list" default="html" label="PLG_CONTENT_USERIDEASADMINMAIL_EMAIL_MODE" description="PLG_CONTENT_USERIDEASADMINMAIL_EMAIL_MODE_DESC" >
                   <option value="plain">PLG_CONTENT_USERIDEASADMINMAIL_PLAIN</option>
                   <option value="html">PLG_CONTENT_USERIDEASADMINMAIL_HTML</option>
                </field>
			</fieldset>
        </fields>
	</config>
</extension>
