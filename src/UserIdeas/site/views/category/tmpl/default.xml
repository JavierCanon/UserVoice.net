            </field>

            <field
                    name="show_create_date" default=""
                    type="list"
                    class="chzn-color"
                    label="JGLOBAL_SHOW_CREATE_DATE_LABEL"
                    description="JGLOBAL_SHOW_CREATE_DATE_DESC">
                <option	value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="0">JHIDE</option>
                <option	value="1">JSHOW</option>
            </field>

            <field
                    name="show_hits" default=""
                    type="list"
                    class="chzn-color"
                    label="JGLOBAL_SHOW_HITS_LABEL"
                    description="JGLOBAL_SHOW_HITS_DESC">
                <option	value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="0">JHIDE</option>
                <option	value="1">JSHOW</option>
            </field>

            <field
                    name="show_status" default=""
                    type="list"
                    class="chzn-color"
                    label="COM_USERIDEAS_SHOW_STATUS_LABEL"
                    description="COM_USERIDEAS_SHOW_STATUS_DESC">
                <option	value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="0">JHIDE</option>
                <option	value="1">JSHOW</option>
            </field>

            <field name="show_button_comments" type="list" default=""
                   class="chzn-color"
                   label="COM_USERIDEAS_DISPLAY_BUTTON_COMMENTS"
                   description="COM_USERIDEAS_DISPLAY_BUTTON_COMMENTS_DESC"
            >
                <option	value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field name="show_tags" default=""
                   type="list"
                   class="chzn-color"
                   label="JGLOBAL_SHOW_TAGS_LABEL"
                   description="JGLOBAL_SHOW_TAGS_DESC"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field name="allow_html" type="list" default="" label="COM_USERIDEAS_ITEMS_ALLOW_HTML" description="COM_USERIDEAS_ITEMS_ALLOW_HTML_DESC" class="chzn-color">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="intro_length" type="text" label="COM_USERIDEAS_INTRO_LENGTH" description="COM_USERIDEAS_INTRO_LENGTH_DESC" />
            <field name="items_limit" type="text" default="20" size="50" label="COM_USERIDEAS_ITEMS_LIMIT" description="COM_USERIDEAS_ITEMS_LIMIT_DESC" />

            <field
                    name="spacer1"
                    type="spacer"
                    hr="true"
            />

            <field
                    name="show_pagination"
                    type="list"
                    description="JGLOBAL_PAGINATION_DESC"
                    label="JGLOBAL_PAGINATION_LABEL"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
                <option value="2">JGLOBAL_AUTO</option>
